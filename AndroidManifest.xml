<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.px.tilepuzzle"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"  >
        
        <!-- move the following line inside activity  -->
        <!-- android:configChanges="orientation|keyboardHidden|screenSize" -->
        <activity
            android:name="com.px.tilepuzzle.ImageSelection"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="com.px.tilepuzzle.GamePlay" 
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            
        </activity>
        
        <activity 
            android:name="com.px.tilepuzzle.YouWin" 
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            
        </activity>
        
        <activity 
            android:name="com.px.tilepuzzle.util.ImageBreakdown" >
        </activity>
        

        <activity
            android:name="com.px.tilepuzzle.util.DisplaySolution"
            android:label="@string/solution_display"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>
